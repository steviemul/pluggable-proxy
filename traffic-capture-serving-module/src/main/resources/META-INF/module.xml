<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<module>
  <name>Traffic Capturing / Serving</name>
  <namespace>stevemul.net.trafficcapture</namespace>
  <settings>
  	<setting>
  	  <name>capturingPattern</name>
  	  <type>TEXT_BOX</type>
  	  <order>0</order>
  	  <label>Capturing Pattern</label>
  	</setting>
  	<setting>
  	  <name>capturing</name>
  	  <type>CHECKBOX</type>
  	  <order>1</order>
  	  <default>false</default>
  	  <label>Capturing</label>
  	</setting>
  	<setting>
  	  <name>servingLocal</name>
  	  <type>CHECKBOX</type>
  	  <order>2</order>
  	  <default>false</default>
  	  <label>Serve locally captured traffic</label>
  	</setting>
  	<setting>
  	  <name>contentDirectory</name>
  	  <type>FILE</type>
  	  <order>3</order>
  	  <label>Content Directory</label>
  	</setting>
  	<setting>
  	  <name>clearDirectory</name>
  	  <type>ACTION</type>
  	  <order>4</order>
  	  <label>Clear Content Directory</label>
  	</setting>
  	<setting>
  	  <name>templateDirectory</name>
  	  <type>FILE</type>
  	  <order>5</order>
  	  <label>Template Directory</label>
  	</setting>
  	<setting>
  	  <name>dumpTemplates</name>
  	  <type>CHECKBOX</type>
  	  <order>6</order>
  	  <label>Dump Templates</label>
  	</setting>
  	<setting>
  	  <name>allowTemplateOverrides</name>
  	  <type>CHECKBOX</type>
  	  <order>7</order>
  	  <default>false</default>
  	  <label>Allow Template Overrides</label>
  	</setting>
  </settings>
  <loading-priority>10</loading-priority>
  <request-processors>
  	<processor>net.stevemul.proxy.processors.AlternateServerRequestProcessor</processor>
  	<processor>net.stevemul.proxy.processors.LocalCachedRequestProcessor</processor>
  </request-processors>
  <actions>
  	<action key="clearDirectory">net.stevemul.proxy.actions.ClearContentDirectoryAction</action>
  </actions>
  <response-processors>
  	<processor>net.stevemul.proxy.processors.PagesEndpointResponseProcessor</processor>
  	<processor>net.stevemul.proxy.processors.ResponseCachingProcessor</processor>
  </response-processors>
</module>